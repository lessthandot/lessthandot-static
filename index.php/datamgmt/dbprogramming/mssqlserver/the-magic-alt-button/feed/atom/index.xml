	<entry>
		<title>By: Thomas Franz</title>
		<link rel="alternate" href="/index.php/datamgmt/dbprogramming/mssqlserver/the-magic-alt-button/#comment-4176494" type="text/html" />

		<author>
			<name>Thomas Franz</name>
			
